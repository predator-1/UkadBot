    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\src\\index.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": { "NODE_ENV": "development"},
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/**/**/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",          
            "runtimeArgs": [
                "--nolazy"
            ],
            "preLaunchTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current file",
            "program": "${file}",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": { "NODE_ENV": "development"},
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/**/**/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",          
            "runtimeArgs": [
                "--nolazy"
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858
        }
    ]
}